pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building your application..'
                echo 'Jenkins running sucessfully... '
            }
        }
        stage('Test') {
            steps {
                echo 'Testing your application..'
                echo 'Jenkins testing sucessfully... '
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying your application....'
                echo 'Running jenkins inside deploy section of my application....'
            }
        }
    }
}
